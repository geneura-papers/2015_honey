###############################################################################
# Makefile
###############################################################################

EPS = $(shell find . -type f -iname "*.eps")
TEX = $(wildcard *.tex)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto:
	latexmk -bibtex -f -pdf -pvc

clean:
	latexmk -C

realclean: clean
	$(RM) *.aux *.bbl *.blg *.tdo *.spl *~

###############################################################################

%.pdf: %.tex $(EPS)
	latexmk -bibtex -pdf $*

###############################################################################

.NOEXPORT:

###############################################################################

